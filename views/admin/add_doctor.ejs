<h2>Add Doctor</h2>
<form action="/admin/doctors/add" method="POST">
    <div>
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required>
    </div>
    <div>
        <label for="specialization">Specialization:</label>
        <input type="text" id="specialization" name="specialization" required>
    </div>
    <div>
        <label for="chamber">Chamber:</label>
        <input type="text" id="chamber" name="chamber">
    </div>
    <div>
        <label for="location">Location:</label>
        <input type="text" id="location" name="location">
    </div>
    <div>
        <label for="availableDays">Available Days (comma-separated):</label>
        <input type="text" id="availableDays" name="availableDays">
    </div>
    <div>
        <label for="time">Time:</label>
        <input type="text" id="time" name="time">
    </div>
    <div>
        <label for="phone">Phone:</label>
        <input type="text" id="phone" name="phone">
    </div>
    <div>
        <label for="email">Email:</label>
        <input type="email" id="email" name="email">
    </div>
    <div>
        <label for="fee">Fee:</label>
        <input type="number" id="fee" name="fee">
    </div>
    <button type="submit">Add Doctor</button>
</form>
